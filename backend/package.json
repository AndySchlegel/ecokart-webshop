{
  "name": "ecokart-backend",
  "version": "1.0.0",
  "description": "EcoKart Backend API - Local Development",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && cp -r src/templates dist/",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:all": "npm test && npm run test:integration",
    "dynamodb:create-tables": "node scripts/create-dynamodb-tables.js",
    "dynamodb:verify": "node scripts/verify-dynamodb-tables.js",
    "dynamodb:migrate": "node scripts/migrate-to-dynamodb.js",
    "dynamodb:migrate:single": "node scripts/migrate-to-dynamodb-single.js",
    "dynamodb:setup": "npm run dynamodb:create-tables && npm run dynamodb:migrate",
    "lambda:build": "npm run build",
    "lambda:deploy": "sam build && sam deploy --guided",
    "lambda:deploy:quick": "sam build && sam deploy"
  },
  "keywords": [
    "ecokart",
    "express",
    "typescript",
    "rest-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.637.0",
    "@aws-sdk/client-ses": "^3.940.0",
    "@aws-sdk/client-ssm": "^3.940.0",
    "@aws-sdk/credential-providers": "^3.916.0",
    "@aws-sdk/lib-dynamodb": "^3.637.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "aws-jwt-verify": "^4.0.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "resend": "^4.0.1",
    "serverless-http": "^3.2.0",
    "stripe": "^20.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@testcontainers/localstack": "^11.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "testcontainers": "^11.8.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
